<%= form_for(@timetableap) do |f| %>
  <% if @timetableap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@timetableap.errors.count, "error") %> prohibited this timetableap from being saved:</h2>

      <ul>
      <% @timetableap.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Flight_Number %><br />
    <%= f.number_field :Flight_Number %>
  </div>
  <div class="field">
    <%= f.label :aircompany_id %><br />
    <%= f.select :aircompany_id, Aircompany.all.collect{|item| [item.Airline_name_rus, item.id]} %>
  </div>
  <div class="field">
    <%= f.label :way_start %><br />
	<%= f.select :way_start, Airport.where(iso_code: 'EZ').collect{|item| [item.name_rus, item.id]} %>
  </div>
  <div class="field">
    <%= f.label :way_end %><br />
    <%= f.select :way_end, Airport.where(iso_code: 'EZ').collect{|item| [item.name_rus, item.id]} %>
  </div>
  <div class="field">
    <%= f.label :TermStart %><br />
    <%= f.text_field :TermStart %>
  </div>
  <div class="field">
    <%= f.label :GateStart %><br />
    <%= f.text_field :GateStart %>
  </div>
  <div class="field">
    <%= f.label :TermEnd %><br />
    <%= f.text_field :TermEnd %>
  </div>
  <div class="field">
    <%= f.label :GateEnd %><br />
    <%= f.text_field :GateEnd %>
  </div>
  <div class="field">
    <%= f.label :TypeOfPlane %><br />
    <%= f.text_field :TypeOfPlane %>
  </div>
  <div class="field">
    <%= f.label :TimeStart %><br />
    <%= f.time_select :TimeStart %>
  </div>
  <div class="field">
    <%= f.label :TimeEnd %><br />
    <%= f.time_select :TimeEnd %>
  </div>
  <div class="field">
    <%= f.label :DateOfStartNav %><br />
