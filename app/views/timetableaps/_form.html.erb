  </div>
  <div class="field">
    <%= f.label :DateOfEndNav %><br />
    <%= f.date_select :DateOfEndNav %>
  </div>
  <div class="field">
    <%= f.label "Mon" %><br />
	<%= f.check_box(:s1, options = {}, checked_value = "1", unchecked_value = "0") %>
	<%= f.check_box(:e1, options = {}, checked_value = "1", unchecked_value = "0") %>
  </div>
  <div class="field">
    <%= f.label "Tue" %><br />
