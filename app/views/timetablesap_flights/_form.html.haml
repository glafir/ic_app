= form_for @timetablesap_flight do |f|
  -if @timetablesap_flight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@timetablesap_flight.errors.count, "error")} Чтобы сохранить:"
      %ul
        - @timetablesap_flight.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :timetableap_id
    = f.number_field :timetableap_id
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :end
    = f.datetime_select :end
  .actions
    = f.submit 'Сохранить'
