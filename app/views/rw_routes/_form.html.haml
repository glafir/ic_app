= form_for @rw_route do |f|
  -if @rw_route.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rw_route.errors.count, "error")} Чтобы сохранить:"
      %ul
        - @rw_route.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_route
    = f.number_field :start_route
  .field
    = f.label :end_route
    = f.number_field :end_route
  .actions
    = f.submit 'Сохранить'