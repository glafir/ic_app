= form_for @aircraft_company do |f|
  - if @aircraft_company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@aircraft_company.errors.count, "error")} prohibited this aircraft_company from being saved:"
      %ul
        - @aircraft_company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :country_id
    = f.select :country_id, Country.all.collect{|item| [item.country_name, item.id]}
  .field
    = f.label :aircraft_company
    = f.text_field :aircraft_company
  .actions
    = f.submit 'Save'
